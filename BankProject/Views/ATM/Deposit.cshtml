@model BankProject.ViewModels.ATMDepositViewModel
@{
    ViewData["Title"] = "Депозит у банкоматі";
}

<h2>Покласти кошти</h2>

<form asp-action="Deposit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3">
        <label asp-for="Amount" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
            <small class="form-text text-muted">Максимальний депозит за раз – 5000.</small>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Покласти</button>
    <a asp-action="Home" class="btn btn-secondary ms-2">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
