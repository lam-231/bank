@model BankProject.ViewModels.ATMWithdrawViewModel
@{
    ViewData["Title"] = "Зняття коштів";
    var atmCash = ViewData["ATMCash"] as decimal? ?? 0m;
}

<h2>Зняти кошти</h2>

<p><strong>Готівка в банкоматі:</strong> @atmCash.ToString("C")</p>

<form asp-action="Withdraw" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3">
        <label asp-for="Amount" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-6">
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
            <small class="form-text text-muted">Введіть суму для зняття.</small>
        </div>
    </div>

    <button type="submit" class="btn btn-warning">Зняти</button>
    <a asp-action="Home" class="btn btn-secondary ms-2">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
