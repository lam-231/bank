@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BankProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MyBankApp</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Головна</a>
                        </li>
                        @{
                            var userId = HttpContextAccessor.HttpContext.Session.GetInt32("_UserId");
                        }
                        @if (userId != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contacts" asp-action="Index">Контакти</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @{
                            var path = HttpContextAccessor.HttpContext.Request.Path.Value?.ToLower() ?? "";
                            bool isAtm = path.StartsWith("/atm");
                            bool isAdmin = path.StartsWith("/admin");
                        }

                        @if (isAtm)
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary"
                                   asp-controller="Mobile" asp-action="Profile">
                                    Мобільна версія
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary"
                                   asp-controller="Admin" asp-action="Index">
                                    Адмін
                                </a>
                            </li>
                        }
                        else if (isAdmin)
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary"
                                   asp-controller="Mobile" asp-action="Profile">
                                    Мобільна версія
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary"
                                   asp-controller="ATM" asp-action="Login">
                                    Банкомат
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary"
                                   asp-controller="ATM" asp-action="Login">
                                    Банкомат
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-secondary"
                                   asp-controller="Admin" asp-action="Index">
                                    Адмін
                                </a>
                            </li>
                        }

                        @if (userId != null)
                        {
                            <li class="nav-item ms-3">
                                <a class="nav-link" asp-controller="Mobile" asp-action="Profile">Профіль</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Logout">Вийти</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-3">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Увійти</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Реєстрація</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span class="text-muted">© 2025 MyBankApp. All rights reserved.</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
